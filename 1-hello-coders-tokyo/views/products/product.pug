extends ../layouts/common

block content
	h1 Products

	.d-flex.align-items-center

		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input#searchBox.form-control(name="q", type="text", value="")
			button(class="btn btn-primary ml-2") Search

	.row
		each product in products
			.col-sm-3.mb-4
				.card(style='width: 16rem;')
					img.card-img-top(src= product.image, alt='Card image cap')
					.card-body
						h5.card-title= product.name
						p.card-text= product.description
						a.btn.btn-primary(href='#') Add to cart

	nav.mb-5(aria-label='Page navigation example')
		ul.pagination.justify-content-center

			if currentPage == 1
				li.page-item.disabled
					a.page-link(href='#', tabindex='-1') Previous
			else
				li.page-item
					a.page-link(href='?page='+previousPage) Previous

			- var i = 1
			while i < numberOfPages
				li.page-item
					a.page-link(href='?page='+i)= i++
				

			li.page-item
				a.page-link(href='?page='+numberOfPages)= numberOfPages

			if currentPage == numberOfPages	
				li.page-item.disabled
					a.page-link(href='?page='+nextPage) Next
			else
				li.page-item
					a.page-link(href='?page='+nextPage) Next

