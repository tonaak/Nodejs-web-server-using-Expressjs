extends ../layouts/common

block content
	h1
		span.mr-3 Users
		a.btn.btn-primary(href="/users/create") New

	.d-flex.align-items-center

		form.ml-auto(action="/users/search", method="GET", class="d-flex")
			input#searchBox.form-control(name="q", type="text", value="")
			button(class="btn btn-primary ml-2") Search

	table.table
		tr
			th Name
			th Phone
			th Action

		each user in users
			tr
				td
					img(src= user.avatar, width="50px")
				td= user.name
				td= user.phone	
				td
					a.btn.btn-secondary(href="/users/" + user.id) View

	script document.getElementById('searchBox').value = (new URL(document.location)).searchParams.get('q');
